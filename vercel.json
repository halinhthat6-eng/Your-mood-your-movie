{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.ts" },
    {
      "src": "/(.*)",
      "dest": "/dist/$1",
      "continue": true
    },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/dist/index.html" }
  ]
}



